<Page
    x:Class="WebviewVersion.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:WebviewVersion"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">
    <Page.Resources />

    <StackPanel Margin="0,50" HorizontalAlignment="Center">
        <Button
            Width="200"
            Margin="0,0,0,50"
            Click="ButtonBase_OnClick"
            Content="Get Info" />

        <TextBlock FontWeight="Bold" Text="Is Exists" />
        <TextBlock x:Name="IsExistsTextBlock" />


        <TextBlock
            Margin="0,12,0,0"
            FontWeight="Bold"
            Text="Version" />
        <TextBlock x:Name="VersionTextBlock" />

        <TextBlock
            Margin="0,12,0,0"
            FontWeight="Bold"
            Text="Install Type" />
        <TextBlock x:Name="InstallTypeTextBlock" />
    </StackPanel>
</Page>
